; Notes:
; Programmer Notes:
; int random2(int max)
; 7 local variables
; Seed value must be between 0 and 2047
	.equ	max_i, 9
	.equ	rLocal1, 6	; multiplier
	.equ	rLocal2, 5	; increment
	.equ	rLocal3, 4	; modulus
	.equ rLocal4, 3	; seed
	.equ	rLocal5, 2
	.equ	rLocal6, 1
	.equ	rLocal7, 0
random2:	bgn#	7
	lda	seed ; seed = (seed * 2789 + 1997) % 2048)
	mul#	2789
	ada#	1997
	mod#	2048
	inc	! max_i	; seed % (max + 1)
	mod	! max_i
	fin#	7
	rtn		; return seed % (max + 1) ; in the accumulator

